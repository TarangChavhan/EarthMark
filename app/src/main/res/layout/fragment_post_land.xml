<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/noimg"
            android:id="@+id/AddEventCompanyPhoto"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BtnPostLandPhoto"
            android:background="@drawable/btshape"
            android:layout_margin="16dp"
            android:text="Set Photo"
            android:textColor="@color/white"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/etshape"
            android:id="@+id/ETPostLandPhotoName"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:hint="Enter Company/Owner Name"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/etshape"
            android:textStyle="bold"
            android:inputType="numberSigned"
            android:id="@+id/ETPostLandPhotoRating"
            android:paddingLeft="16dp"
            android:hint="Enter Land Rating"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/etshape"
            android:textStyle="bold"
            android:id="@+id/ETPostLandPhotoAddress"
            android:paddingLeft="16dp"
            android:hint="Enter Land Address"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/etshape"
            android:textStyle="bold"
            android:inputType="numberSigned"
            android:id="@+id/ETPostLandPhotoBudget"
            android:paddingLeft="16dp"
            android:hint="Enter Company Maximum Budget"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/etshape"
            android:textStyle="bold"
            android:id="@+id/ETPostLandPhotoOffer"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:hint="Enter Offer On Land"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/etshape"
            android:id="@+id/ETPostLandPhotoCategoryName"
            android:paddingLeft="16dp"
            android:hint="Enter Land Category (Eg. Plot etc...)"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/etshape"
            android:id="@+id/ETPostLandPhotoDescription"
            android:paddingLeft="16dp"
            android:hint="Enter Land Description"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/etshape"
            android:id="@+id/ETPostLandPhotoContactNumber"
            android:paddingLeft="16dp"
            android:hint="Enter Owner Number"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Company Details"
            android:id="@+id/BtnPostLandDataDetails"
            android:textColor="@color/white"
            android:background="@drawable/btshape"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>
</ScrollView>